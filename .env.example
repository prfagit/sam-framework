# SAM Framework Configuration
# Copy this file to .env and fill in your values

# LLM Provider Configuration
# Choose one: openai (default), anthropic, xai, openai_compat, local
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic (Claude)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-5-sonnet-latest
# ANTHROPIC_BASE_URL=https://api.anthropic.com

# xAI (Grok) â€” OpenAI-compatible chat API
# XAI_API_KEY=your-xai-api-key
# XAI_MODEL=grok-2-latest
# XAI_BASE_URL=https://api.x.ai/v1

# Local LLM via OpenAI-compatible server (e.g., Ollama/LM Studio/vLLM)
# LOCAL_LLM_BASE_URL=http://localhost:11434/v1
# LOCAL_LLM_MODEL=llama3.1
# LOCAL_LLM_API_KEY=

# Required: Fernet encryption key for secure private key storage
# Generate with: sam generate-key
SAM_FERNET_KEY=your-generated-fernet-key-here

# Solana Configuration
SAM_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SAM_DB_PATH=.sam/sam_memory.db

# Safety and Performance Settings
RATE_LIMITING_ENABLED=true
MAX_TRANSACTION_SOL=1000
DEFAULT_SLIPPAGE=1

# Tool/Integration Toggles (optional; default true)
# Set to 'false' to disable specific integrations
ENABLE_SOLANA_TOOLS=true
ENABLE_PUMP_FUN_TOOLS=true
ENABLE_DEXSCREENER_TOOLS=true
ENABLE_JUPITER_TOOLS=true
ENABLE_SEARCH_TOOLS=true
ENABLE_ASTER_FUTURES_TOOLS=true

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Brave Search API key for web search functionality
BRAVE_API_KEY=your-brave-api-key-here

# Aster Futures Configuration (optional)
# Get your API credentials from https://www.asterdex.com/
ASTER_API_KEY=your-aster-api-key-here
ASTER_API_SECRET=your-aster-api-secret-here
ASTER_BASE_URL=https://fapi.asterdex.com
ASTER_DEFAULT_RECV_WINDOW=5000
